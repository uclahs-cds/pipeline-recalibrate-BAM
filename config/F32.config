process {
    withName: run_validate_PipeVal {
        cpus = 1
        memory = 1.GB
    }
    withName: extract_GenomeIntervals {
        cpus = 1
        memory = 1.GB
    }
    withName: run_SplitIntervals_GATK {
        cpus = 1
        memory = 1.GB
    }
    withName: run_RealignerTargetCreator_GATK {
        cpus = 4
        memory = 6.GB
        retry_strategy {
            memory {
                strategy = 'exponential'
                operand = 2
            }
        }
    }
    withName: run_IndelRealigner_GATK {
        cpus = 4
        memory = 6.GB
        retry_strategy {
            memory {
                strategy = 'exponential'
                operand = 4
            }
        }
    }
}
